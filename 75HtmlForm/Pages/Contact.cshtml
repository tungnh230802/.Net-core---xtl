@model _75HtmlForm.Pages.ContactModel
@{
}

<h1>Liên hệ</h1>
@* enctype="multipart/form-data" => Để upload file *@
<form enctype="multipart/form-data" method="post" asp-page="Contact" class="m-2 p-3 alert-danger">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="customerInfo.UserName"></label>
        <input asp-for="customerInfo.UserName" class="form-control">
        <span asp-validation-for="customerInfo.UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="customerInfo.Email"></label>
        <input asp-for="customerInfo.Email" class="form-control">
        <span asp-validation-for="customerInfo.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="customerInfo.Birth"></label>
        <input asp-for="customerInfo.Birth" class="form-control">
        <span asp-validation-for="customerInfo.Birth" class="text-danger"></span>
    </div>
    @* <div class="form-group">
        <label asp-for="fileUpload"></label>
        <input asp-for="fileUpload" class="form-control">
        <span asp-validation-for="fileUpload" class="text-danger"></span>
    </div> *@
        <div class="form-group">
        <label asp-for="fileUploads"></label>
        <input asp-for="fileUploads" class="form-control">
        <span asp-validation-for="fileUploads" class="text-danger"></span>
    </div>


    <div class="form-group mt-2">
        <button class="btn btn-primary" type="submit">Send</button>
    </div>
</form>

@if (@Model.customerInfo != null)
{
    <p>@Model.thongbao</p>

    <p>Thông tin nhận được</p>
    <ul>
        <li>User Name: @Model.customerInfo.UserName</li>
        <li>Email: @Model.customerInfo.Email</li>
        <li>Birth: @Model.customerInfo.Birth</li>
    </ul>
}
